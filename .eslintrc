{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "env": {
    "node": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:eslint-plugin/recommended",
    "airbnb-base"
  ],
  "plugins": ["eslint-plugin"],
  "rules": {
    "no-underscore-dangle": "off",
    "no-plusplus": "off",
    "no-param-reassign": "off",
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  }
}
